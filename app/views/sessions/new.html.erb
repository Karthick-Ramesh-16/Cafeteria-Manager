<section class="UsersNew">
	<h1 class="NewUser-title">Sign In</h1>
	<%= form_with(url: sessions_path, class: "NewUser-form") do |form| %>
		<div class="Form-section">
			<p class="FormInput-label">Email </p>
			<%= form.email_field :email, class: "Form-input", autofocus: true, required: true %>
		</div>
		<div class="Form-section">
			<p class="FormInput-label">Password </p>
			<%= form.password_field :password, class: "Form-input", required: true %>
		</div>
		<div class="Form-section">
			<%= form.submit "Sign In", class: "Form-submit" %>
		</div>
	<% end %>
	<%= link_to "Create new account", new_user_path, class: "SignUp" %>
</section>