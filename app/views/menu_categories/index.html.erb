<h1 class="MenuCategory">Menu</h1>

<% MenuCategory.all.each do |mc| %>
    <h2 class="MenuCategory-title"><%= mc.name %></h2>

    <ul>
        <% MenuItem.get_menu_items(mc.id).each do |item| %>
            <% if item.availability %>
                <li>
                    <div class="MenuItem-container">
                        <p class="MenuItem-title"><%= item.name %></p>
                        <p class="MenuItem-price">â‚¹ <%= item.price %></p>
                        <%= button_tag("Buy", type: "button", class: "MenuItem-BuyButton") %>
                        <%= form_with(url: "/cart_items?menu_item_id=#{item.id}", method: "POST", class: "MenuItem-AddCart") do %>
                            <%= submit_tag("Add to cart") %>
                        <% end %>
                    </div>
                    <p class="MenuItem-description"><%= item.description %>
                </li>
            <% end %>
        <% end %>
    </ul>
<% end %>